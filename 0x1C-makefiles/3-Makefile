CC = gcc
SRC = school.c main.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm

.PHONY = all re clean oclean fclean

all : ${OBJ}
	${CC} ${OBJ} -o ${NAME}

%.o : %.c
	${CC}	-c -o $@ $<

clean :
	${RM} -f ${NAME} $(wildcard *~)

oclean :
	${RM} -f ${OBJ}

fclean :
	${RM} -f ${NAME} $(wildcard *~)
	${RM} -f ${OBJ}

re : oclean all
